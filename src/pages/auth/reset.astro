---
/**
 * Reset Password Page
 *
 * Set new password after clicking reset link from email.
 * User arrives here after /api/auth/callback exchanges the code for a session.
 */

import AuthLayout from "@/layouts/AuthLayout.astro";
import ResetPasswordForm from "@/components/auth/ResetPasswordForm";

// SSR-only - requires runtime access to cookies/headers for auth middleware
export const prerender = false;

// Get parameters from URL
const url = new URL(Astro.request.url);
const code = url.searchParams.get("code");
const type = url.searchParams.get("type");

// If user arrives with a code, redirect to callback to exchange it for a session
// This handles cases where the email link points directly here instead of callback
if (code && type === "recovery") {
  return Astro.redirect(`/api/auth/callback?code=${code}&next=/auth/reset`);
}

// Check if user has an active session (from callback code exchange)
const user = Astro.locals.user;
const hasValidSession = !!user;
---

<AuthLayout title="Ustaw nowe hasło" description="Wprowadź nowe, silne hasło dla swojego konta.">
  {
    hasValidSession ? (
      <ResetPasswordForm client:load />
    ) : (
      <div class="text-center space-y-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-destructive/10 rounded-full">
          <svg class="w-8 h-8 text-destructive" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
            />
          </svg>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-foreground mb-2">Link wygasł lub jest nieprawidłowy</h3>
          <p class="text-sm text-muted-foreground mb-6">
            Link do resetowania hasła wygasł lub został już wykorzystany.
            <br />
            Poproś o nowy link resetujący.
          </p>
          <a
            href="/auth/forgot"
            class="inline-block px-6 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-all duration-200"
          >
            Poproś o nowy link
          </a>
        </div>
        <div class="pt-4 border-t border-border">
          <a href="/auth/login" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
            Powrót do logowania
          </a>
        </div>
      </div>
    )
  }
</AuthLayout>

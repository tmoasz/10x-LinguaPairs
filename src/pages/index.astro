---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";

// SSR-only - uses Astro.locals.user for conditional rendering
export const prerender = false;

const user = (Astro.locals.user as { id: string; email: string | null } | undefined) ?? null;
---

<Layout title="LinguaPairs — Generuj i ucz się słownictwa 10x szybciej" showNavigation={false}>
  <Welcome user={user} />
</Layout>

---
import LoginForm from "./auth/LoginForm";

interface Props {
  user: { id: string; email: string | null } | null;
}

const { user } = Astro.props;
const isAuthenticated = Boolean(user);
---

<div class="min-h-screen bg-background">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <!-- Header -->
    <header class="mb-12 flex items-center justify-between">
      <a href="/" class="inline-flex items-center gap-2 text-lg font-semibold text-foreground">
        <span class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10">
          <svg class="h-6 w-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            ></path>
          </svg>
        </span>
        LinguaPairs
      </a>
      {
        isAuthenticated && (
          <div class="flex items-center gap-3">
            <button
              data-signout
              class="inline-flex items-center justify-center rounded-md border border-border bg-background px-4 py-2 text-sm font-medium text-foreground transition hover:bg-accent"
            >
              Wyloguj
            </button>
            <span class="text-sm text-muted-foreground">{user?.email}</span>
          </div>
        )
      }
    </header>

    <!-- Main content: Two columns -->
    <main class="grid gap-12 lg:grid-cols-2 lg:gap-16">
      <!-- Left column: Project info -->
      <div class="flex flex-col justify-center space-y-8">
        <div>
          <h1 class="text-3xl font-bold text-foreground sm:text-4xl lg:text-5xl">Kreatywna nauka słownictwa</h1>
          <p class="mt-4 text-lg text-muted-foreground">
            Generuj zestawy par słownych tłumaczeń i ćwicz w trybach Nauki i Challenge.
          </p>
        </div>

        <div class="space-y-6">
          <div>
            <h2 class="text-lg font-semibold text-foreground">Generacja zestawów</h2>
            <p class="mt-2 text-sm text-muted-foreground">
              Wybierz temat lub opisz sytuację. System generuje pary: słów, zwrotów, mini-fraz, proste zdania. Bardzo
              kreatywne, dopasowuje się do Twojego stylu i tematyki. Ucz się słów aby sprostać konketnym sytuacjom
              życiowym.
            </p>
          </div>

          <div>
            <h2 class="text-lg font-semibold text-foreground">Tryby nauki</h2>
            <ul class="mt-2 space-y-2 text-sm text-muted-foreground">
              <li>• <strong>Nauka łączeniem:</strong> siatka 2×5 z niezależnym tasowaniem kolumn</li>
              <li>• <strong>Challenge:</strong> 10 par na czas z zapisem wyniku</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Right column: Login panel -->
      <div class="flex items-center justify-center">
        {
          isAuthenticated ? (
            <div class="w-full max-w-md space-y-6 rounded-lg border border-border bg-card p-8">
              <div class="text-center">
                <h2 class="text-2xl font-semibold text-card-foreground">Witaj z powrotem</h2>
                <p class="mt-2 text-sm text-muted-foreground">{user?.email}</p>
              </div>
              <div class="space-y-3">
                <a
                  href="/generate"
                  class="block w-full rounded-md bg-primary px-4 py-3 text-center text-sm font-medium text-primary-foreground transition hover:bg-primary/90"
                >
                  Generuj nowy zestaw
                </a>
                <a
                  href="/decks"
                  class="block w-full rounded-md border border-border bg-background px-4 py-3 text-center text-sm font-medium text-foreground transition hover:bg-accent"
                >
                  Moje zestawy
                </a>
              </div>
            </div>
          ) : (
            <div class="w-full max-w-md rounded-lg border border-border bg-card p-8 shadow-sm">
              <div class="mb-6 text-center">
                <h2 class="text-2xl font-semibold text-card-foreground">Zaloguj się</h2>
                <p class="mt-2 text-sm text-muted-foreground">
                  Zaloguj się, aby generować zestawy i synchronizować postęp
                </p>
              </div>
              <LoginForm client:load />
              <div class="mt-6 text-center">
                <p class="text-sm text-muted-foreground">
                  Nie masz konta?{" "}
                  <a href="/auth/register" class="font-medium text-primary hover:text-primary/80">
                    Zarejestruj się
                  </a>
                </p>
              </div>
            </div>
          )
        }
      </div>
    </main>

    <!-- Footer -->
    <footer class="mt-16 border-t border-border py-6 text-center text-sm text-muted-foreground">
      <p>© {new Date().getFullYear()} LinguaPairs. Wszystkie prawa zastrzeżone.</p>
    </footer>
  </div>
</div>

<script is:inline>
  const signoutButtons = document.querySelectorAll("[data-signout]");

  function handleSignoutError(target) {
    target.disabled = false;
    target.classList.remove("opacity-70");
    const message = document.createElement("div");
    message.textContent = "Nie udało się wylogować. Spróbuj ponownie.";
    message.className = "mt-3 rounded-md bg-destructive px-4 py-2 text-center text-xs font-semibold text-white";
    target.insertAdjacentElement("afterend", message);
    setTimeout(() => message.remove(), 4000);
  }

  if (signoutButtons.length) {
    signoutButtons.forEach((button) => {
      button.addEventListener("click", (event) => {
        event.preventDefault();
        const target = event.currentTarget;
        if (!(target instanceof HTMLButtonElement)) return;

        target.disabled = true;
        target.classList.add("opacity-70");

        fetch("/api/auth/signout", { method: "POST" })
          .then((res) => {
            if (!res.ok) {
              throw new Error("Signout failed");
            }
            window.location.href = "/";
          })
          .catch(() => handleSignoutError(target));
      });
    });
  }
</script>

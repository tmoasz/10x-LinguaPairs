---
interface Props {
  user: { id: string; email: string | null } | null;
}

const { user } = Astro.props;
const isAuthenticated = Boolean(user);
---

<div class="relative min-h-screen overflow-hidden bg-linear-to-br from-slate-950 via-indigo-950 to-blue-900 text-white">
  <!-- Background glow -->
  <div class="pointer-events-none absolute inset-0">
    <div class="absolute -top-32 -left-32 h-96 w-96 rounded-full bg-primary/20 blur-3xl"></div>
    <div class="absolute -bottom-24 right-0 h-96 w-96 rounded-full bg-blue-500/20 blur-3xl"></div>
    <div class="absolute inset-0 bg-grid-white/[0.03]"></div>
  </div>

  <div class="relative mx-auto flex min-h-screen w-full max-w-6xl flex-col px-4 pb-16 pt-10 sm:px-8 md:px-12">
    <header class="flex items-center justify-between gap-6">
      <a href="/" class="inline-flex items-center gap-2 text-lg font-semibold tracking-wide text-white">
        <span class="flex h-10 w-10 items-center justify-center rounded-xl bg-primary/20">
          <svg class="h-6 w-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            ></path>
          </svg>
        </span>
        LinguaPairs
      </a>

      <nav class="flex items-center gap-4 text-sm font-medium">
        <a href="#features" class="rounded-full px-4 py-2 text-white/80 transition hover:bg-white/10 hover:text-white">
          Funkcje
        </a>
        <a
          href="#how-it-works"
          class="rounded-full px-4 py-2 text-white/80 transition hover:bg-white/10 hover:text-white"
        >
          Jak to działa
        </a>
        <a href="#cta" class="rounded-full px-4 py-2 text-white/80 transition hover:bg-white/10 hover:text-white">
          Start
        </a>

        {
          isAuthenticated ? (
            <div class="flex items-center gap-3 rounded-full bg-white/10 px-3 py-1.5 backdrop-blur sm:px-4">
              <span class="hidden text-xs text-white/80 sm:inline">{user?.email}</span>
              <button
                data-signout
                class="inline-flex items-center justify-center rounded-full bg-primary px-3 py-1.5 text-xs font-semibold text-white transition hover:bg-primary/80"
              >
                Wyloguj
              </button>
            </div>
          ) : (
            <div class="flex items-center gap-3">
              <a
                href="/auth/login"
                class="rounded-full px-4 py-2 text-white transition hover:bg-white hover:text-slate-900"
              >
                Zaloguj się
              </a>
              <a
                href="/auth/register"
                class="inline-flex items-center justify-center rounded-full bg-primary px-4 py-2 text-white transition hover:bg-primary/80"
              >
                Utwórz konto
              </a>
            </div>
          )
        }
      </nav>
    </header>

    <main class="mt-16 flex flex-1 flex-col gap-24">
      <section class="grid gap-12 md:grid-cols-[1.1fr_0.9fr] md:items-center">
        <div class="space-y-8">
          <span
            class="inline-flex items-center gap-2 rounded-full bg-white/10 px-4 py-1.5 text-xs uppercase tracking-widest text-white/70"
          >
            10x szybciej do płynności
          </span>
          <h1 class="text-4xl font-bold leading-tight text-white sm:text-5xl md:text-6xl">
            Generuj spersonalizowane pary językowe i ćwicz w angażujących trybach.
          </h1>
          <p class="max-w-xl text-lg text-white/80 sm:text-xl">
            LinguaPairs łączy automatyczne tworzenie zestawów tłumaczeń z mini-grą łączenia i prostym modelem Leitner.
            Ucz się wtedy, gdy masz czas — online i offline.
          </p>

          <div class="flex flex-wrap items-center gap-4">
            {
              isAuthenticated ? (
                <>
                  <a
                    href="/generate"
                    class="inline-flex items-center justify-center rounded-full bg-primary px-6 py-3 text-sm font-semibold text-white transition hover:bg-primary/80"
                  >
                    Generuj nowy zestaw
                  </a>
                  <a
                    href="#features"
                    class="inline-flex items-center justify-center rounded-full border border-white/30 px-6 py-3 text-sm font-semibold text-white/80 transition hover:border-white hover:text-white"
                  >
                    Zobacz funkcje
                  </a>
                </>
              ) : (
                <>
                  <a
                    href="/auth/register"
                    class="inline-flex items-center justify-center rounded-full bg-primary px-6 py-3 text-sm font-semibold text-white transition hover:bg-primary/80"
                  >
                    Rozpocznij za darmo
                  </a>
                  <a
                    href="/auth/login"
                    class="inline-flex items-center justify-center rounded-full border border-white/30 px-6 py-3 text-sm font-semibold text-white/80 transition hover:border-white hover:text-white"
                  >
                    Mam już konto
                  </a>
                </>
              )
            }
          </div>

          <dl class="grid gap-6 sm:grid-cols-3">
            <div>
              <dt class="text-xs uppercase tracking-widest text-white/60">Generacje dzienne</dt>
              <dd class="text-2xl font-semibold text-white">3</dd>
              <p class="text-xs text-white/60">Limit zgodny z MVP — skup się na najważniejszych tematach.</p>
            </div>
            <div>
              <dt class="text-xs uppercase tracking-widest text-white/60">Pary w zestawie</dt>
              <dd class="text-2xl font-semibold text-white">50</dd>
              <p class="text-xs text-white/60">Słowa, zwroty i mini-frazy zgodnie z PRD.</p>
            </div>
            <div>
              <dt class="text-xs uppercase tracking-widest text-white/60">Tryby nauki</dt>
              <dd class="text-2xl font-semibold text-white">Challenge &amp; Leitner</dd>
              <p class="text-xs text-white/60">Monitoruj postęp i utrwalaj wiedzę.</p>
            </div>
          </dl>
        </div>

        <div class="relative">
          <div class="absolute -inset-6 rounded-3xl bg-white/10 blur-2xl"></div>
          <div class="relative rounded-3xl border border-white/10 bg-white/10 p-6 backdrop-blur-xl">
            <h2 class="text-lg font-semibold text-white">Codzienna rutyna LinguaPairs</h2>
            <ul class="mt-6 space-y-4 text-sm text-white/80">
              <li class="flex items-start gap-3">
                <span
                  class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary/20 text-primary"
                >
                  1
                </span>
                Wybierz temat lub opisz sytuację — generujemy pasujące pary tłumaczeń.
              </li>
              <li class="flex items-start gap-3">
                <span
                  class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary/20 text-primary"
                >
                  2
                </span>
                Przejdź przez mini-grę łączenia i sprawdź się w trybie Challenge.
              </li>
              <li class="flex items-start gap-3">
                <span
                  class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary/20 text-primary"
                >
                  3
                </span>
                Zapisz postęp w modelu Leitner lub kontynuuj offline dzięki PWA.
              </li>
            </ul>
            <div class="mt-6 rounded-2xl bg-slate-950/60 p-4">
              <p class="text-xs uppercase tracking-widest text-primary">Dla gości</p>
              <p class="text-sm text-white/80">
                Kuratorowane zestawy są dostępne bez logowania — zacznij ćwiczyć natychmiast.
              </p>
            </div>
          </div>
        </div>
      </section>

      <section id="features" class="space-y-10">
        <div class="flex flex-col gap-4 text-center">
          <h2 class="text-3xl font-semibold text-white sm:text-4xl">Dlaczego LinguaPairs działa</h2>
          <p class="mx-auto max-w-2xl text-base text-white/70">
            Produkt powstał, by rozwiązać realne problemy: brak czasu na tworzenie fiszek, monotonny trening i trudność
            w utrzymaniu regularności. Funkcje w MVP odpowiadają kluczowym historyjkom z PRD.
          </p>
        </div>

        <div class="grid gap-6 md:grid-cols-3">
          <article class="rounded-2xl border border-white/10 bg-white/10 p-6 backdrop-blur">
            <h3 class="text-lg font-semibold text-white">Generacja na żądanie</h3>
            <p class="mt-3 text-sm text-white/70">
              Uzyskaj 50 par tłumaczeń dopasowanych do tematu lub własnego opisu. Wybieraj rejestr i filtruj typ treści,
              by otrzymać dokładnie to, czego potrzebujesz.
            </p>
            <ul class="mt-4 space-y-2 text-xs text-white/60">
              <li>• Dedykowane limity 3 zestawów dziennie</li>
              <li>• Eliminacja duplikatów i oznaczanie błędów</li>
              <li>• Opcja dogenerowania „+10” w kolejnych iteracjach</li>
            </ul>
          </article>

          <article class="rounded-2xl border border-white/10 bg-white/10 p-6 backdrop-blur">
            <h3 class="text-lg font-semibold text-white">Nauka i Challenge</h3>
            <p class="mt-3 text-sm text-white/70">
              Mini-gra łączenia oraz tryb Challenge utrzymują wysoki poziom skupienia, a błędy uruchamiają mechanizmy
              anty-cheat, by ograniczyć zgadywanie.
            </p>
            <ul class="mt-4 space-y-2 text-xs text-white/60">
              <li>• Rozszerzalna siatka 2×3 do 10 wierszy</li>
              <li>• Trzy rundy Challenge z wpływem na Leitner</li>
              <li>• Integracja telemetrii dla dalszych usprawnień</li>
            </ul>
          </article>

          <article class="rounded-2xl border border-white/10 bg-white/10 p-6 backdrop-blur">
            <h3 class="text-lg font-semibold text-white">Postęp i offline</h3>
            <p class="mt-3 text-sm text-white/70">
              Synchronizuj naukę przez Supabase Auth i Leitner, a gdy jesteś offline — korzystaj z 10 ostatnich cached
              zestawów w PWA.
            </p>
            <ul class="mt-4 space-y-2 text-xs text-white/60">
              <li>• Logowanie e-mail + hasło z Supabase</li>
              <li>• Leitner z trzema kubkami dla jasnego progresu</li>
              <li>• Offline-ready cache zgodny z MVP</li>
            </ul>
          </article>
        </div>
      </section>

      <section id="how-it-works" class="grid gap-8 md:grid-cols-2">
        <div class="rounded-3xl border border-white/10 bg-white/10 p-8 backdrop-blur">
          <h3 class="text-2xl font-semibold text-white">Spójny przepływ użytkownika</h3>
          <p class="mt-4 text-sm text-white/70">
            Od rejestracji po powtarzanie materiału — cały proces jest zaprojektowany zgodnie z wymaganiami PRD, tak by
            użytkownik mógł przejść do nauki w mniej niż minutę.
          </p>
          <ol class="mt-6 space-y-4 text-sm text-white/80">
            <li>
              <span class="font-semibold text-white">1. Rejestracja</span> — Supabase Auth wysyła automatyczną weryfikację
              na e-mail.
            </li>
            <li>
              <span class="font-semibold text-white">2. Generacja</span> — użytkownik definiuje temat i parametry, system
              dostarcza dopasowane pary.
            </li>
            <li>
              <span class="font-semibold text-white">3. Nauka</span> — gra łączenia + Challenge + Leitner utrzymują motywację.
            </li>
            <li>
              <span class="font-semibold text-white">4. Progres</span> — historia i postęp zsynchronizowane z Supabase, z
              opcją pracy offline.
            </li>
          </ol>
        </div>

        <div class="rounded-3xl border border-white/10 bg-white/5 p-8 backdrop-blur-lg">
          <h3 class="text-2xl font-semibold text-white">Dla zespołu produktowego</h3>
          <p class="mt-4 text-sm text-white/70">
            LinguaPairs startuje jako MVP, ale architektura pozwala na szybkie iteracje: telemetria zdarzeń,
            rozdzielenie tras publicznych i prywatnych oraz modularne serwisy domenowe.
          </p>
          <ul class="mt-6 space-y-3 text-sm text-white/80">
            <li>• SSR + Astro middleware dbają o ochronę tras i przekierowania.</li>
            <li>• Komponenty React 19 odpowiadają za formularze i interakcje.</li>
            <li>• Supabase zapewnia Auth, bazę danych i realtime.</li>
            <li>• Tailwind 4 i Shadcn/ui gwarantują spójną stylistykę UI.</li>
          </ul>
          <p class="mt-6 text-xs text-white/60">
            Kolejne iteracje mogą rozszerzyć limit generacji, wprowadzić import/eksport oraz bardziej zaawansowane
            raportowanie postępów.
          </p>
        </div>
      </section>

      <section
        id="cta"
        class="rounded-3xl border border-white/10 bg-linear-to-r from-primary/50 via-primary/30 to-transparent p-10 backdrop-blur-lg"
      >
        <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
          <div>
            <h3 class="text-3xl font-semibold text-white">Gotowy, by generować swoje pierwsze 50 par?</h3>
            <p class="mt-3 text-sm text-white/80">
              Dołącz do LinguaPairs i zacznij ćwiczyć słownictwo w trybie, który dopasowuje się do Twoich potrzeb.
            </p>
          </div>
          <div class="flex flex-wrap items-center gap-4">
            {
              isAuthenticated ? (
                <>
                  <a
                    href="/generate"
                    class="inline-flex items-center justify-center rounded-full bg-white px-6 py-3 text-sm font-semibold text-slate-900 transition hover:bg-white/90"
                  >
                    Przejdź do generatora
                  </a>
                  <button
                    data-signout
                    class="inline-flex items-center justify-center rounded-full border border-white/60 px-6 py-3 text-sm font-semibold text-white transition hover:border-white"
                  >
                    Wyloguj się
                  </button>
                </>
              ) : (
                <>
                  <a
                    href="/auth/register"
                    class="inline-flex items-center justify-center rounded-full bg-white px-6 py-3 text-sm font-semibold text-slate-900 transition hover:bg-white/90"
                  >
                    Utwórz konto
                  </a>
                  <a
                    href="/auth/login"
                    class="inline-flex items-center justify-center rounded-full border border-white/60 px-6 py-3 text-sm font-semibold text-white transition hover:border-white"
                  >
                    Mam już konto
                  </a>
                </>
              )
            }
          </div>
        </div>
      </section>
    </main>

    <footer
      class="mt-16 flex flex-col gap-2 border-t border-white/10 py-6 text-sm text-white/60 sm:flex-row sm:items-center sm:justify-between"
    >
      <p>© {new Date().getFullYear()} LinguaPairs. Wszystkie prawa zastrzeżone.</p>
      <div class="flex gap-4">
        <a href="/auth/login" class="hover:text-white">Logowanie</a>
        <a href="/auth/register" class="hover:text-white">Rejestracja</a>
        <a href="#features" class="hover:text-white">Funkcje</a>
      </div>
    </footer>
  </div>
</div>

<script is:inline>
  const signoutButtons = document.querySelectorAll("[data-signout]");

  function handleSignoutError(target) {
    target.disabled = false;
    target.classList.remove("opacity-70");
    const message = document.createElement("div");
    message.textContent = "Nie udało się wylogować. Spróbuj ponownie.";
    message.className =
      "mt-3 rounded-full bg-red-500/80 px-4 py-2 text-center text-xs font-semibold text-white shadow-lg";
    target.insertAdjacentElement("afterend", message);
    setTimeout(() => message.remove(), 4000);
  }

  if (signoutButtons.length) {
    signoutButtons.forEach((button) => {
      button.addEventListener("click", (event) => {
        event.preventDefault();
        const target = event.currentTarget;
        if (!(target instanceof HTMLButtonElement)) return;

        target.disabled = true;
        target.classList.add("opacity-70");

        fetch("/api/auth/signout", { method: "POST" })
          .then((res) => {
            if (!res.ok) {
              throw new Error("Signout failed");
            }
            window.location.href = "/auth/login";
          })
          .catch(() => handleSignoutError(target));
      });
    });
  }
</script>

---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- eslint-disable -->
    <script is:inline>
      // Inicjalizacja dark mode przed renderowaniem - zapobiega flash of wrong theme
      (function () {
        const savedTheme = localStorage.getItem("theme");
        const root = document.documentElement;

        if (savedTheme === "dark") {
          root.classList.add("dark");
        } else if (savedTheme === "light") {
          root.classList.remove("dark");
        } else {
          // Jeśli nie ma zapisanej preferencji, użyj systemowej
          const systemPrefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          if (systemPrefersDark) {
            root.classList.add("dark");
          }
        }
      })();
    </script>
  </head>
  <body>
    <div class="fixed top-4 right-4 z-50">
      <ThemeToggle client:load />
    </div>
    <slot />
    <Toaster client:load position="bottom-center" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
